# game setup 

rooms = {'Entrance': {'name': 'Entrance', 

        'text': 'You are at the Entrance.'}, 

         

    'Foyer': {'name': 'Foyer', 'east': 'Entrance', 'South': 'Throne Room', 

        'text': 'You are in the Foyer.'},   

    'Throne Room': {'name': 'Throne Room', 'west': 'Warlock Lair', 'north': 'Foyer', 'south': 'Hallway', 

        'text': 'You are in the Throne Room.'}, 

'Warlock Lair': {'name': 'Warlock Lair', 'east': 'Throne Room', 

        'text': 'You are in the Lair!'},   

    'Hallway': {'name': 'Hallway', 'west': 'Library', 'east': 'Deity Altar Room', 

        'text': 'You are in the Hallway.'}, 

'Library': {'name': 'Library', 'east': 'Hallway',  

        'text': 'You are in the Library.'}, 

'Deity Altar Room': {'name': 'Deity Altar Room', 'west': 'Hallway', 'north': 'Kitchen', 

        'text': 'You are in the Deity Altar Room.'}, 

'Kitchen': {'name': 'Kitchen', 'South': 'Deity Altar Room', 

        'text': 'You are in the Kitchen.'} 

 

    } 

directions = ['north', 'south', 'east', 'west'] 

current_room = rooms['Entrance'] 

  

# game text loop 

while True: 

    # display current location 

  

    print('You are in {}.'.format(current_room['name'])) 

    

    # user input 

    command = input('\nWhat do you do?') 

    # moves 

    if command in directions: 

        if command in current_room: 

            current_room = rooms[current_room[command]] 

        elif rooms[3] == 'Warlocks Lair': 

            print('Congratulations! You have reached the lair and defeated the Warlock!') 

            break 

        else: 

            # invalid movement 

            print('You cannot go that way.') 

    # quit game 

    elif command == 'quit': 

        print('Thanks for playing!') 

        break 

    # invalid command 

    else: 

        print('Invalid input') 

 

