# game setup 

rooms = {'Entrance': {'name': 'Entrance', 

        'text': 'You are at the Entrance.'}, 

         

    'Foyer': {'name': 'Foyer', 'east': 'Entrance', 'South': 'Throne Room', 

        'text': 'You are in the Foyer.'},   

    'Throne Room': {'name': 'Throne Room', 'west': 'Warlocks Lair', 

        'text': 'You are in the Throne Room.'} 

    } 

directions = ['north', 'south', 'east', 'west'] 

current_room = rooms['Entrance'] 

  

# game text loop 

while True: 

    # display current location 

  

    print('You are in {}.'.format(current_room['name'])) 

    

    # user input 

    command = input('\nWhat do you do?') 

    # moves 

    if command in directions: 

        if command in current_room: 

            current_room = rooms[current_room[command]] 

        elif rooms[3] == 'Warlocks Lair': 

            print('Congratulations! You have reached the lair and defeated the Warlock!') 

            break 

        else: 

            # invalid movement 

            print('You cannot go that way.') 

